{
  "compilerOptions": {
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "./src/",
    "outDir": "./temp/",
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["es2018", "dom"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/tests"]
}
